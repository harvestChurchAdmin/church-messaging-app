# Application
PORT=3000
SESSION_SECRET=change_me
SERVER_BASE_URL=https://your-domain.com            # Publicly reachable base URL for OAuth and Twilio callbacks
APP_LOGO_URL=https://placehold.co/280x80/cccccc/333333?text=Your+Logo+Here

# Google OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=https://your-domain.com/auth/google/callback  # Must match your Google OAuth redirect URI

# Breeze ChMS API
BREEZE_API_KEY=your_breeze_api_key
BREEZE_SUBDOMAIN=your-breeze-subdomain             # The subdomain only (e.g., for https://demo.breezechms.com use "demo")

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890                    # E.164 format, e.g., +12025550123

# Email (for forwarding inbound SMS replies)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_app_noreply_email@yourdomain.com
EMAIL_PASS=your_generated_app_password
NOREPLY_EMAIL=noreply@yourdomain.com
