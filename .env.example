# Application Configuration

PORT=3000                                           # The port your Node.js application will run on (e.g., 3000)
SESSION_SECRET=a_very_secret_key_that_you_should_change # REQUIRED: A strong, random string for session encryption. CHANGE THIS IN PRODUCTION!
SERVER_BASE_URL=https://your-domain.com               # REQUIRED: The base URL of your deployed application (e.g., https://text.harvestchurch.ca)
APP_LOGO_URL=https://placehold.co/280x80/cccccc/333333?text=Your+Logo+Here # Optional: URL for your app's logo, if using a custom one

# Google OAuth Credentials

GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID                  # REQUIRED: Your Google OAuth Client ID from Google Cloud Console
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET          # REQUIRED: Your Google OAuth Client Secret from Google Cloud Console
GOOGLE_CALLBACK_URL=https://your-domain.com/auth/google/callback # REQUIRED: Must exactly match an Authorized redirect URI in Google Cloud Console

# Twilio Credentials

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # REQUIRED: Your Twilio Account SID
TWILIO_AUTH_TOKEN=your_twilio_auth_token           # REQUIRED: Your Twilio Auth Token
TWILIO_PHONE_NUMBER=+1234567890                    # REQUIRED: Your Twilio phone number (E.164 format, e.g., +12025550123)

# Email Service Credentials for Nodemailer (using Gmail/Google Workspace as an example)

EMAIL_HOST=smtp.gmail.com                           # REQUIRED: Your SMTP host (e.g., smtp.gmail.com for Gmail/Google Workspace)
EMAIL_PORT=587                                      # REQUIRED: SMTP port (e.g., 587 for TLS, 465 for SSL)
EMAIL_USER=your_app_noreply_email@yourdomain.com    # REQUIRED: The email address your app uses to LOG IN to send emails (e.g., admin@harvestchurch.ca)
EMAIL_PASS=your_generated_app_password              # REQUIRED: IMPORTANT: For Gmail/Google Workspace, use a Google App Password here, NOT your regular password.
NOREPLY_EMAIL=noreply@yourdomain.com                # REQUIRED: The "From" email address that appears in automated replies (often same as EMAIL_USER)